@{
    ViewData["Title"] = "Dojo Survey";
}

@model DojoSurvey.Models.SurveyForm

<div class="container d-flex justify-content-center">
    <form class="row border border-1 border-dark mt-5 p-4 w-50" asp-action="Submit" asp-controller="Home" method="post">
        <div class="d-flex flex-column">
            <div class="d-flex align-items-center">
                <label class="col-5" for="name">Your Name:</label>
                <input class="form-control" type="text" name="name">
            </div>
            <span asp-validation-for="name" class="offset-5 mb-2 text-danger"></span>
        </div>

        <div class="d-flex flex-column">
            <div class="d-flex align-items-center">
                <label class="col-5" for="language">Dojo Location:</label>
                <select class="form-select mb-2" name="location">
                    <option value="">Select a location</option>
                    <option value="Tunis">Tunis, TN</option>
                    <option value="Bellevue">Bellevue, WA</option>
                    <option value="Silicon Valley">Silicon Valley, CA</option>
                    <option value="Los Angeles">Los Angeles, CA</option>
                </select>
            </div>
            <span asp-validation-for="location" class="offset-5 mb-2 text-danger"></span>
        </div>
        <div class="d-flex flex-column">
            <div class="d-flex align-items-center">
                <label class="col-5" for="language">Favourite Language:</label>
                <select class="form-select mb-2" aria-label="Default select example" name="language">
                    <option value="">Select a language</option>
                    <option value="Python">Python</option>
                    <option value="Java">Java</option>
                    <option value="JS">JavaScript</option>
                    <option value="CSharp/DotNet">C#/.NET</option>
                </select>
            </div>
            <span asp-validation-for="language" class="offset-5 mb-2 text-danger"></span>
        </div>
        <div class="d-flex flex-column">
            <div class="d-flex flex-column justify-content-center">
                <label class="form-label" for="comments">Comment(Optional):</label>
                <textarea name="comments" class="form-control" rows="5"></textarea>
            </div>
            <span asp-validation-for="comments" class="mb-2 text-danger"></span>
        </div>
        <div class="d-flex justify-content-end mt-3">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
