<div class="row row-cols-1 row-cols-md-5 g-4 my-4">
    @{
        foreach (var p in ViewBag.Products)
        {
            <div class="col" style="height: 250px;Width: 160px;">
                <div class="card d-flex justify-content-center p-2 h-100">
                    <img class="card-img-top h-50" src="@p.ImageUrl" alt="Product Image" />
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h6 class="card-title text-center">@p.Name</h6>
                        <p class="card-text text-center">@p.Quatity left</p>
                    </div>
                </div>
            </div>
        }
    }
    <div class="d-flex flex-column justify-content-end">
        <a href="/products">Show more products...</a>
    </div>
</div>
<div class="row my-4">
    <h6 class="text-decoration-underline">Recent Orders</h6>
    @foreach (var order in ViewBag.RecentOrders)
    {
        int daysAgo = (int)(DateTime.Now - order.CreatedAt).TotalDays;
        <p class="mb-1 ps-5">
            @order.Orderer.Name purchased @order.Quantity @order.OrderedProduct.Name @daysAgo day(s) ago
        </p>
    }
    <a class="ps-5" href="/orders">Show more orders...</a>
</div>
<div class="row my-4">
    <h6 class="text-decoration-underline">New Customers</h6>
    @foreach (var customer in ViewBag.RecentCustomers)
    {
        int daysAgo = (int)(DateTime.Now - customer.CreatedAt).TotalDays;
        <p class="mb-1 ps-5">@customer.Name joined the store @daysAgo day(s) ago</p>
    }
    <a class="ps-5" href="/customers">Show all customers...</a>
</div>
