@model Order

<div class="mt-5 h4 text-decoration-underline">Add a new Order</div>
<form action="/orders/add" method="post">
    <div class="row mt-4 align-items-center justify-content-center">
        <div class="col-auto">
            <label asp-for="CustomerId" class="form-label">Customer</label>
        </div>
        <div class="col">
            <select class="w-75 form-select" asp-for="CustomerId">
                <option selected value="">Select one</option>
                @foreach (var customer in ViewBag.AllCustomers)
                {
                    <option value="@customer.ID">@customer.Name</option>
                }
            </select>
        </div>
        <div class="col-auto">
            <label asp-for="ProductId" class="form-label">Product</label>
        </div>
        <div class="col">
            <select class="w-75 form-select" asp-for="ProductId">
                <option selected value="">Select one</option>
                @foreach (var product in ViewBag.AllProducts)
                {
                    <option value="@product.ID">@product.Name</option>
                }
            </select>
        </div>
        <div class="col-auto">
            <label asp-for="Quantity" class="form-label">Quantity</label>
        </div>
        <div class="col">
            <input class="w-75 form-control" asp-for="Quantity">
        </div>
    </div>
    <div class="col mt-3">
        <button class="btn btn-primary">Order</button>
    </div>
</form>

<div class="row table-responsive mt-5">
    <table class="table table-striped table-borderless align-middle text-center">
        <thead>
            <tr class="table-dark">
                <th>Customer Name</th>
                <th>Product</th>
                <th>Quantity</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody class="table-group-divider">
            @{
                foreach (var order in ViewBag.AllOrders)
                {
                    <tr>
                        <td>@order.Orderer.Name</td>
                        <td>@order.OrderedProduct.Name</td>
                        <td>@order.Quantity</td>
                        <td>@order.CreatedAt.ToString("MMMM dd, yyyy")</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>