@{
    ViewData["Title"] = "Home Page";
}

@model User

<div class="container d-flex justify-content-between mt-4">
    <div class="col">
        <h1 class="mb-5">Register</h1>
        <form asp-action="Register" asp-controller="Home">
            <div class="d-flex align-items-center gap-4 w-75">
                <label asp-for="FirstName" class="col-4 form-label">First Name:</label>
                <input asp-for="FirstName" class="form-control">
            </div>
            <span class="offset-3 ps-4 text-danger" asp-validation-for="FirstName"></span>

            <div class="d-flex align-items-center gap-4 mt-3 w-75 w-75">
                <label asp-for="LastName" class="col-4 form-label">Last Name:</label>
                <input asp-for="LastName" class="form-control">
            </div>
            <span class="offset-3 ps-4 text-danger" asp-validation-for="LastName"></span>

            <div class="d-flex align-items-center gap-4 mt-3 w-75">
                <label asp-for="Email" class="col-4 form-label">Email:</label>
                <input asp-for="Email" class="form-control">
            </div>
            <span class="offset-3 ps-4 text-danger" asp-validation-for="Email"></span>

            <div class="d-flex align-items-center gap-4 mt-3 w-75">
                <label asp-for="Password" class="col-4 form-label">Password:</label>
                <input asp-for="Password" class="form-control">
            </div>
            <span class="offset-3 ps-4 text-danger" asp-validation-for="Password"></span>

            <div class="d-flex align-items-center gap-4 mt-3 w-75">
                <label asp-for="Confirm" class="col-4 form-label">Confirm Password:</label>
                <input asp-for="Confirm" class="form-control">
            </div>
            <span class="offset-3 ps-4 text-danger text-wrap" asp-validation-for="Confirm"></span><br>

            <button class="btn btn-primary mt-3">Register</button>
        </form>
    </div>
    <div class=" col">
        <h1 class="mb-5">Login</h1>
        <partial name="LoginPartial" />
    </div>
</div>
